area of circle
#!/bin/bash
echo "enter the value of radius"
read r
area=$(echo "3.14*$r*$r" | bc )
echo "area is : $area"

greatest of 3 numbers
#!/bin/bash
echo "give 3 numbers for the input"
read x
echo "give 3 numbers for the input"
read y
echo "give 3 numbers for the input"
read z
echo "three numbers are $x $y $z"
if [ $x -gt $y ] && [ $x -gt $z ]
then 
echo "$x is greater"
elif [ $y -gt $x ] && [ $y -gt $z ]
then 
echo "$y is greater"
else
echo "$z is greater"
fi

swapping of 2 numbers
#!/bin/bash
echo "give 2 numbers to swap"
read x
echo "give 2 numbers to swap"
read y
echo "2 nums before swapping $x and $y"
x=$(expr $x + $y)
y=$(expr $x - $y)
x=$(expr $x - $y)
echo "2 nums after swapping $x and $y"

#!/bin/bash
echo "give 2 numbers for swapping"
read x
echo "give 2 numbers for swapping"
read y
echo "numbers before swapping $x and $y "
z=$x
x=$y
y=$z
echo "numbers after swapping $x and $y"

